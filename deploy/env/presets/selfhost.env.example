# Self-host preset (postgres + s3/minio)
ASHFOX_PERSISTENCE_PRESET=selfhost
ASHFOX_PERSISTENCE_FAIL_FAST=true

ASHFOX_DB_PROVIDER=postgres
ASHFOX_DB_POSTGRES_URL=postgresql://ashfox:ashfox@postgres:5432/ashfox
ASHFOX_DB_POSTGRES_SCHEMA=public
ASHFOX_DB_POSTGRES_TABLE=ashfox_projects
ASHFOX_DB_POSTGRES_MIGRATIONS_TABLE=ashfox_schema_migrations

ASHFOX_STORAGE_PROVIDER=s3
ASHFOX_STORAGE_S3_REGION=us-east-1
ASHFOX_STORAGE_S3_ENDPOINT=http://minio:9000
ASHFOX_STORAGE_S3_ACCESS_KEY_ID=replace-me
ASHFOX_STORAGE_S3_SECRET_ACCESS_KEY=replace-me
ASHFOX_STORAGE_S3_FORCE_PATH_STYLE=true
# ASHFOX_STORAGE_S3_SESSION_TOKEN=
# ASHFOX_STORAGE_S3_KEY_PREFIX=
